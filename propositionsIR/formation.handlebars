	<nav><strong>
		<div class="u-pull-right">
			<h6  id="ident">  {{session.prenom}}  {{session.nom}}</h6>  
			<a   id="deconnexion" href="/">Déconnexion</a>
		</div>
		</strong>
	</nav> 
</h6>
	
<br/><br/>
